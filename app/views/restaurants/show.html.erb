<div class="container">
  <h1 class="my-4"><%= @restaurant.name %></h1>

  <p>Address: <%= @restaurant.address %></p>
  <p>Phone #: <%= @restaurant.phone_number %></p>
  <p>Category: <%= @restaurant.category %></p>

  <h3>Reviews</h3>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %></li>
    <% end %>
  </ul>

  <p><%= link_to "Write a review", new_restaurant_review_path(@restaurant), class: "btn btn-success" %></p>

  <p><%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-success" %></p>
</div>
