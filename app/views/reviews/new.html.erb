<div class="container">
  <h1>New Review</h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.label "Rating (Enter 0-5):", :rating %>
    <%= f.text_field :rating %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>

<p><%= link_to "Back to restaurant details", restaurant_path(@restaurant), class: "btn btn-success" %></p>
  <p><%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-success" %></p>
</div>
